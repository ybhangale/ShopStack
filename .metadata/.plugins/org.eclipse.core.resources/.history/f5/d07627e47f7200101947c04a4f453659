# ======================
# SERVER PORT
# ======================
server.port=8080

# ======================
# JWT CONFIGURATION
# ======================
jwt.secret=MyJwtSecretKey123456
jwt.expiration=86400000   

# ======================
# LOGGING (Optional)
# ======================
logging.level.org.springframework.security=DEBUG
